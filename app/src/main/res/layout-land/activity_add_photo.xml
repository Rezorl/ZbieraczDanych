<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawe.firstdb.AddPhotoActivity"
    android:weightSum="8"
    android:orientation="horizontal"
    android:background="#222627">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/imageViewPhoto"
        android:layout_weight="6"
        android:scaleType="fitCenter"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:id="@+id/buttonCamera"
            android:onClick="takePhoto"
            android:layout_weight="1"
            android:text="@string/addPhoto"
            android:background="#3da282"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:layout_margin="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:id="@+id/buttonDeletePhoto"
            android:onClick="deletePhoto"
            android:layout_weight="1"
            android:text="@string/deletePhoto"
            android:background="#3da282"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:layout_margin="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:id="@+id/buttonContinue"
            android:onClick="continueClick"
            android:layout_weight="1"
            android:text="@string/forward"
            android:background="#3da282"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:layout_margin="8dp" />
    </LinearLayout>
</LinearLayout>
