<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pawe.firstdb.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical"
        android:background="#222627">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:dividerHeight="1.5dp"
            android:textColor="#fff"
            android:divider="#3da282"
            android:id="@android:id/list"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_weight="8"
            android:cacheColorHint="#FFF">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addPerson"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:text="@string/addPerson"
            android:textColor="#fff"
            android:background="#3da282"
            android:layout_margin="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/floatingActionButton_changeLang"
                android:onClick="changeLanguageOnClick"
                android:layout_weight="1"
                android:text="@string/changeLangueage"
                android:textColor="#fff"
                android:background="#3da282"
                android:layout_margin="8dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>